---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
const mediaUrl = import.meta.env.PUBLIC_MEDIA_URL;
---

<BaseLayout>
  <div class="hero-container">
    <Image 
      src={`${mediaUrl}/images/featured.jpg`} 
      alt="Featured image" 
      width={2400}
      height={1600}
      format="webp"
      class="hero-image"
    />
  </div>
</BaseLayout>

<style is:global>
  /* Override body styles for home page only */
  body.homepage {
    overflow: hidden !important;
  }
  
  body.homepage main {
    padding: 0 !important;
  }
</style>

<style>
	.hero-container {
		position: fixed;
		top: 60px; /* Height of navigation */
		left: 0;
		right: 0;
		bottom: 0;
		padding: 0.3rem;
		display: flex;
		justify-content: center;
		align-items: flex-start;
	}

	.hero-image {
		max-height: calc(100% - 0.6rem);
		max-width: calc(100% - 0.6rem);
		width: auto;
		height: auto;
		object-fit: contain;
		object-position: top;
	}

	@media (max-width: 768px) {
		.hero-container {
			top: 48px; /* Adjust for mobile nav height */
		}
	}
</style>

<script>
  // Add homepage class to body
  document.body.classList.add('homepage');
</script>
