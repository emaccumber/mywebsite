---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { albums } from '../data/albums.js';

const pageTitle = "Photographs";

// Transform album data for display
const albumsWithThumbnails = albums.map(album => ({
  ...album,
  thumbnail: `https://f004.backblazeb2.com/file/ethan-site-media/images/photographs/${album.slug}/${album.thumbnailPhoto || 1}.jpg`,
  photoCount: album.photos.length
}));
---

<BaseLayout pageTitle={pageTitle}>
	<div class="albums-grid">
		{albumsWithThumbnails.map(album => (
			<a href={`/photographs/${album.slug}`} class="album-card" data-astro-prefetch="viewport">
				<Image 
					src={album.thumbnail} 
					alt={album.name}
					width={400}
					height={400}
					format="webp"
					loading="lazy"
					class="album-thumbnail"
				/>
				<h3 class="album-title">{album.name}</h3>
			</a>
		))}
	</div>
</BaseLayout>

<style>
	.albums-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 1rem;
	}

	.album-card {
		text-decoration: none;
		color: inherit;
		transition: transform 0.2s;
		display: block;
	}

	.album-card:hover {
		transform: translateY(-4px);
	}

	.album-thumbnail {
		width: 100%;
		height: 250px;
		object-fit: contain;
		object-position: center bottom;
	}

	.album-title {
		margin: 0.5rem 0 0 0;
		font-size: 1rem;
		color: var(--text-primary);
		text-align: center;
	}

	@media (max-width: 768px) {
		.albums-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.album-thumbnail {
			height: 200px;
		}
	}

	@media (min-width: 769px) and (max-width: 1024px) {
		.albums-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 1025px) {
		.albums-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}
</style>