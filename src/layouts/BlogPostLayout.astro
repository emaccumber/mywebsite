---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  frontmatter: {
    title: string;
    pubDate: Date;
    description: string;
    author: string;
    image?: {
      url: string;
      alt: string;
    };
    tags?: string[];
  };
}

const { frontmatter } = Astro.props;
const pubDate = new Date(frontmatter.pubDate);
const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout pageTitle={frontmatter.title}>
  <article>
    <h1>{frontmatter.title}</h1>
    <p class="meta">
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
    </p>
    {frontmatter.tags && (
      <div class="tags">
        {frontmatter.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
    <div class="content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  article {
    max-width: 800px;
    margin: 0 auto;
  }

  article > h1 {
    font-size: var(--font-xl);
  }

  .meta {
    color: #666;
    font-size: var(--font-sm);
    margin: 0.5rem 0 1rem;
  }

  html.dark .meta {
    color: #999;
  }

  .tags {
    margin: 1rem 0;
  }

  .tag {
    display: inline-block;
    background: #f0f0f0;
    color: #000;
    padding: 0.25rem 0.75rem;
    border-radius: 0.25rem;
    margin-right: 0.5rem;
    font-size: var(--font-sm);
  }

  html.dark .tag {
    background: #333;
    color: #fff;
  }

  .content {
    margin-top: 2rem;
  }

  .content :global(h1) {
    font-size: var(--font-xl);
    margin: 2rem 0 1rem;
  }

  .content :global(h2) {
    font-size: var(--font-lg);
    margin: 1.5rem 0 0.75rem;
  }

  .content :global(h3) {
    font-size: var(--font-base);
    margin: 1.25rem 0 0.5rem;
  }

  .content :global(p) {
    margin: 1rem 0;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .content :global(li) {
    margin: 0.5rem 0;
  }

  .content :global(code) {
    background: #f5f5f5;
    color: #000;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: var(--font-sm);
  }

  html.dark .content :global(code) {
    background: #333;
    color: #fff;
  }

  .content :global(pre) {
    background: #f5f5f5;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }

  html.dark .content :global(pre) {
    background: #333;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }

  .content :global(strong) {
    font-weight: 600;
  }

  .content :global(em) {
    font-style: italic;
  }
</style>