---
import '@fontsource/inter/100.css';
import '@fontsource/inter/200.css';
import '@fontsource/inter/400.css';
import Navigation from '../components/Navigation.astro';

export interface Props {
  pageTitle?: string;
  fullViewport?: boolean;
}

const { pageTitle, fullViewport = false } = Astro.props;
const title = pageTitle ? `${pageTitle} - Ethan MacCumber` : 'Ethan MacCumber';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // Prevent dark mode flicker
      const storedTheme = localStorage.getItem('theme');
      const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      const theme = storedTheme || systemTheme;
      
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class:list={[{ 'full-viewport': fullViewport }]}>
    <Navigation />
    <main class:list={[{ 'full-viewport': fullViewport }]}>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    /* Type scale using Major Third (1.25) ratio */
    --font-sm: 0.8rem;      /* 12.8px - captions, metadata */
    --font-base: 1rem;      /* 16px - body, nav links, cards */
    --font-lg: 1.25rem;     /* 20px - large body text, writing list */
    --font-xl: 1.563rem;    /* 25px - page titles, site name */
    --font-2xl: 1.953rem;   /* 31.25px - main headings */
    --font-3xl: 2.441rem;   /* 39px - hero headings */
  }

  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.6;
    background-color: #ffffff;
    color: #000000;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  html.dark {
    background-color: #0a0a0a;
    color: #ffffff;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
  }

  body.full-viewport {
    height: 100vh;
    overflow: hidden;
    display: grid;
    grid-template-rows: auto 1fr;
  }

  main {
    padding: 1rem 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  main.full-viewport {
    padding: 0;
    max-width: none;
    overflow: hidden;
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 400;
    line-height: 1.2;
  }

  h1 {
    font-size: var(--font-3xl);
    margin: 1rem 0;
  }

  h2 {
    font-size: var(--font-2xl);
    margin: 1rem 0;
  }

  a {
    color: inherit;
  }

  p {
    margin: 1rem 0;
  }

  ul, ol {
    margin: 1rem 0;
  }
</style>